{# partner.twig #}
{% extends "layouts/layout.twig" %}

{% block page %}
<div class="partner">
	<div class="g-title">
		Become a Partner
	</div>

	<div class="g-paragraph">
		Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed <br> do eiusmod tempor incididunt ut labore et dolore magna <br> aliqua. Ut enim ad minim veniam, quis nostrud e
	</div>

	<form action="" class="partner-form">
		<div class="partner-form__left">
			<input type="text" placeholder="Name" class="g-input">
			<input type="text" placeholder="Company" class="g-input">
			<input type="text" placeholder="Phone, E-mail, Messenger" class="g-input">

			<button class="g-btn partner-form__submit">
				Send
			</button>
		</div>

		<div class="partner-form__right">
			<label for="message" class="partner-form__label">Message</label>
			<textarea name="message" id="message" cols="30" rows="10" class="g-textarea"></textarea>

			<div class="g-upload _upload">
				<label for="fileInput" class="g-upload__add _uploadAdd">
					<span>Add file</span>
					<input type="file" name="uploads[]" class="g-upload__input" onchange="o2.upload.create(this);" id="fileInput">
				</label>

				<div class="g-uload__items _uploadItems">
				</div>
			</div>

			<button class="g-btn partner-form__submit">
				Send
			</button>
		</div>
	</form>
</div>
{% endblock %}